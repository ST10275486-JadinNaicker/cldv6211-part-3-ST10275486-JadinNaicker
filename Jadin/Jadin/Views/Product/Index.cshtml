@model IEnumerable<Jadin.Models.Product>

@{
    ViewData["Title"] = "Product";
}

<style> /* Styling for the background image and button spacing */
    body {
        background-image: url('images/potterygif.gif');
        background-size: cover; 
        background-repeat: no-repeat; 
        background-attachment: fixed; 
    }

    .btn-spacing {
        margin-right: 10px;
    }
</style>

<form asp-controller="Product" asp-action="Index" method="get">
    <div class="form-group">
        <label for="Category" style="color: white;">Category</label>
        <select name="Category" class="form-control">
            <option value="">All</option>
            @foreach (var category in ViewBag.Categories as List<string>)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" style="color: white;" />
    </div>
</form>

<div class="row">
    <div class="col-12 text-center">
        <br />
        <br />
        <br />
        <h1 id="myHeader" style="color: white; font-size: 5em; font-family: Century, Times, serif"><center>My Work</center></h1>
        <br />
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New product</a> <!-- Create a new product button -->
        </p>
        <br />
        <br />
        <br />
    </div>
</div>

<div class="container"> <!-- Creates container for the product cards --> <!-- This code way adapted from Bootstrap
                                                                               https://getbootstrap.com/docs/4.0/components/card/
                                                                               Date: 3 May 2024 -->
   
    <div class="row">
        @if (Model != null) 
        {
            @foreach (var item in Model)  //Loop through each product in the model
            {
                <div class="col-md-4 mb-3">
                    <div class="card mb-5">
                        <h3 class="card-header">@Html.DisplayFor(modelItem => item.ProductName)</h3>
                        @if (!string.IsNullOrEmpty(item.ProductImage))
                        {
                            <img src="@item.ProductImage" class="card-img-top" alt="@item.ProductImage" />
                        }
                        else 
                        {
                            <!-- Placeholder image if no image available -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180">
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                            </svg>
                        }

                        <div class="card-body"> <!--Product details-->
                            <h5 class="card-title">Product Details</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.ProductDescription)</p>
                            <p class="card-text">R @Html.DisplayFor(modelItem => item.ProductPrice)</p>
                            <p class="card-text">Availability: @Html.DisplayFor(modelItem => item.ProductAvailability)</p>
                            <p class="card-text">Category: @Html.DisplayFor(modelItem => item.ProductCategory)</p>
                        </div>

                        <div class="card-footer text-muted">
                            <div class="d-flex justify-content-center">
                                
                                @if (User.Identity.Name.Contains("admin.co.za"))
                                {

                                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <button type="submit" class="btn btn-danger btn-spacing">Delete item</button>
                                    </form>
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-info btn-spacing">Edit</a>
                                }
                                else
                                {
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-warning btn-spacing">Add to Cart</button>
                                    </form>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No products found.</p>
        }
    </div>
</div>
